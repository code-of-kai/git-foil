#!/usr/bin/env bash
# TruePath CLI Wrapper - Daily development with auto-recompile
# This script runs your CLI via Mix, which automatically recompiles stale code

set -euo pipefail

# Navigate to repository root (resolves symlinks on macOS and Linux)
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

# Execute Mix task with all arguments
# Mix will auto-recompile any changed files before running
exec mix foil "$@"
